{
  "name": "prettier-plugin-glsl",
  "version": "0.0.0",
  "description": "opengl shading language support for prettier",
  "author": "Team Lindenbark",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "run-p dev:**",
    "dev:prettier": "onchange '@(*.ts|@(src|types)/**/*.@(ts|tsx))' -- prettier --write {{changed}}",
    "prepublishOnly": "npm run build"
  },
  "main": "lib/index.js",
  "keywords": [
    "glsl",
    "prettier",
    "prettier-plugin"
  ],
  "dependencies": {
    "glsl-parser": "^2.0.1",
    "glsl-tokenizer": "^2.1.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0"
  }
}
